{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@monorepo/*": [
        "./packages/*/src/index.ts"
      ]
    },
    "outDir": "./dist",
    "strict": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}