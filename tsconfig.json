{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "outDir": "./dist",
    "strict": true,
    "strictNullChecks": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}